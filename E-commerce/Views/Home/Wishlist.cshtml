<h3>Your Wishlists</h3>

<table class="table" id="wishlistTable">
    <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wishlist_product in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-controller="Product" asp-route-Id="@wishlist_product.Product.Id">@wishlist_product.Product.Name</a></td>
                <td>@Html.Raw(@wishlist_product.Product.Description)</td>
                <td>@wishlist_product.Product.Price</td>
                <td><img src="~/media/products/@wishlist_product.Product.Image" width="120" /></td>
                <td>
                    <a asp-action="DeleteWishlist" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@wishlist_product.Wishlists.Id">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>
